<h1>BURGERS</h1>

<h2>Ready to Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/ devoured=true}}
      <button class="devour" data-id="{{this.id}}">Devour it!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/ devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>